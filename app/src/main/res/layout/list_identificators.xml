<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_list_ids_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:text="Identyfikator"
                android:id="@+id/tv_list_ids_employee_name" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_list_ids_icon"
                android:layout_gravity="center"
                android:src="@drawable/ic_grade_black_18dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_list_ids_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="2dp"
            android:layout_below="@id/ll_list_ids_employee"
            android:text="Small Text"
            />
        <TextView
            android:id="@+id/tv_list_ids_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_list_ids_employee"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/app_name"
            android:gravity="right" />
    </RelativeLayout>

