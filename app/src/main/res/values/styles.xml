<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="LoginInput">
        <item name="android:textColorHint">#a5a5a5</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:padding">@dimen/login_input_padding</item>
        <item name="android:layout_marginTop">@dimen/styles_login_input_marginTop</item>
        <item name="android:textSize">@dimen/activity_login_input_text_size</item>
    </style>

    <style name="EventButtonSfera">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/tlo</item>
    </style>
    <!--<style name="EventButtonSferaLeft" parent="EventButtonSfera">-->
    <!--<item name="android:paddingLeft">20dp</item>-->
    <!--</style>-->

    <style name="EventButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="EventButtonEnabled" parent="EventButton">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="EventButtonDisabled" parent="EventButton">
        <item name="android:textColor">#9c9c9c</item>
        <item name="android:background">@drawable/gradient3_grey</item>
    </style>

    <style name="EventButtonGreen" parent="EventButtonEnabled">
        <item name="android:background">@drawable/gradient3_green</item>
    </style>

    <style name="EventButtonRed" parent="EventButtonEnabled">
        <item name="android:background">@drawable/gradient3_red</item>
    </style>

    <style name="EventButtonBlue" parent="EventButtonEnabled">
        <item name="android:background">@drawable/gradient3_blue</item>
    </style>

    <style name="EventButtonOrange" parent="EventButtonEnabled">
        <item name="android:background">@drawable/gradient3_orange</item>
    </style>

    <style name="LoginWelcome">

    </style>

</resources>
