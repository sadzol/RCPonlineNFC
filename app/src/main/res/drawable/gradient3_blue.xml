<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90" android:endColor="#46bde5" android:centerColor="#026cc4"  android:startColor="#056fc9" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#e3e5ea" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90" android:endColor="#46bde5" android:centerColor="#026cc4"  android:startColor="#056fc9" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#e3e5ea" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:angle="90" android:endColor="#65b2dd" android:centerColor="#045ab2"  android:startColor="#0a5db8" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="#e3e5ea" />
        </shape>
    </item>
</selector>